//size of matrix
#define MAX 1000
#define MAX_THREAD 1000
#define PART 1000



int matA[MAX][MAX];
int matB[MAX][MAX];
int matC[MAX][MAX];
int step_i = 0;

void* multi()
{
    int core = step_i++;

    // Each thread computes 1/PATR  of matrix multiplication
    for (int i = core * MAX / PART; i < (core + 1) * MAX / PART; i++){
        for (int j = 0; j < MAX; j++){
            for (int k = 0; k < MAX; k++){
                matC[i][j] += matA[i][k] * matB[k][j];
            }
        }
    }

}
